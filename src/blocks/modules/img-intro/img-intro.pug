-
    const defaultImgIntroProps = {
        classes: '',
        img: 'img/catalog/catalog_intro.webp',
        title: 'Каталог <br>Теплообменников',
        hasBottom: false
    }

mixin img-intro(props = defaultImgIntroProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultImgIntroProps.classes,
            img: props.img ? props.img : defaultImgIntroProps.img,
            title: props.title ? props.title : defaultImgIntroProps.title,
            hasBottom: props.hasBottom ? props.hasBottom : defaultImgIntroProps.hasBottom,
        }

    section.section.section--intro.img-intro(class= checkProps.classes data-anim-id="homeIntro")&attributes(attributes)
        .section__bg(data-aos="fade-in" data-aos-duration="1000" data-aos-anchor="[data-anim-id='homeIntro']")
            img(src=checkProps.img)
        .vt-container.img-intro__content
            +title({
                classes: 'img-intro__title',
                text: checkProps.title,
                tag: 'h1',
                size: '70',
                upper: true
            })(data-aos="fade-right" data-aos-anchor="[data-anim-id='homeIntro']")
            - if(checkProps.hasBottom === true)
                .img-intro__bottom(data-aos="fade-right" data-aos-delay="400" data-aos-anchor="[data-anim-id='homeIntro']")
                    block
